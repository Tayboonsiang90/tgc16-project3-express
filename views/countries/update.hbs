{{#extends "base"}}

    {{#block "content"}}
        <a href="/countries" class="btn btn-lg btn-secondary">Back</a>
        <h1 class="mt-3">Update Country: {{country.name}}</h1>
        <form method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            {{{form}}}
            <input type="submit" value="Update Country" class="btn btn-primary mt-3" />
        </form>
    {{/block}}

{{/extends}}