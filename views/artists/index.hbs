{{#extends "base"}}

    {{#block "content"}}
        <a href="/admin" class="btn btn-lg btn-secondary">Back</a>
        <h1 class="mt-3">Artists</h1>
        <a href="/artists/create" class="btn btn-success">Add New</a>

        <table class="table mt-3">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Country</th>
                    <th>Profile</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>

            </thead>
            <tbody>
                {{#each artists}}
                    <tr>
                        <td>
                            {{this.first_name}}
                        </td>
                        <td>
                            {{this.last_name}}
                        </td>
                        <td>
                            {{this.country.name}}
                        </td>
                        <td>
                            {{this.profile}}
                        </td>
                        <td>
                            <img class="img-thumbnail" src="{{this.image_url}}"/>
                        </td>
                        <td>
                            <a href="/artists/{{this.id}}/update" class="btn btn-success">Update</a>
                        </td>
                        <td>
                            <a href="/artists/{{this.id}}/delete" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/block}}

{{/extends}}