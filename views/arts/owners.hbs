{{#extends "base"}}

    {{#block "content"}}
        <a href="/arts" class="btn btn-lg btn-secondary">Back</a>
        <h1 class="mt-3">Owner List for: {{arts.name}}</h1>
        <h1 class="mt-2">By {{arts.artist.first_name}} {{arts.artist.last_name}}</h1>
        <h1 class="mt-2">Total Shares: {{arts.total_share}}</h1>
        <a href="/arts/create" class="btn btn-success">Add New</a>

        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>First_Name</th>
                    <th>Last_Name</th>
                    <th>Total Shares</th>
                    <th>Shares In Order</th>
                </tr>
            </thead>
            <tbody>
                {{#each arts.users}}
                    <tr>
                        <td>
                            {{this.username}}
                        </td>
                        <td>
                            {{this.email}}
                        </td>
                        <td>
                            {{this.first_name}}
                        </td>
                        <td>
                            {{this.last_name}}
                        </td>
                        <td>
                            {{this._pivot_total_share}}
                        </td>
                        <td>
                            {{this._pivot_share_in_order}}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/block}}

{{/extends}}